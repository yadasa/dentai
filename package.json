{
  "name": "voice-agent-desktop",
  "version": "0.4.46",
  "description": "AI Agent Control Panel",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "publish": "electron-builder --win --publish always"
  },
  "build": {
    "appId": "com.keithazodeh.smartvoicex",
    "productName": "SmartVoiceX Beta",
    "win": {
      "target": "nsis",
      "icon": "build/logo.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": false,
      "deleteAppDataOnUninstall": false
    },
    "extraResources": [
      {
        "from": "k",
        "to": "k"
      }
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "yadasa",
        "repo": "dentai",
        "private": true
      }
    ]
  },
  "dependencies": {
    "electron-store": "^8.2.0",
    "googleapis": "^166.0.0",
    "twilio": "^5.2.0",
    "electron-updater": "^6.0.0"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.0.0"
  }
}
